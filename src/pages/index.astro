---
import PageLayout from "@/layouts/Base";
import SocialList from "@/components/SocialList";

const projects = [
    {
        name: "zepez.dev",
        description: "This site. As simple as possible, theme provided by <a href='https://github.com/chrismwilliams/astro-theme-cactus' target='_blank'>@chrismwilliams/astro-theme-cactus</a>",
        link: "https://zepez.dev",
        retrospective: null,
        repository: "https://github.com/zepez/zepez.dev",
		emoji: "🙋🏻‍♂️"
    },
    {
        name: "nonovel.io",
        description: "A website for reading public domain books.",
        link: "https://nonovel.io",
        retrospective: "/posts/nonovel-io/",
        repository: null,
		emoji: "📚"
    },
    {
        name: "nashandpine.com",
        description: "A <i>very simple</i> brochure site I did for a previoius employer. The web arm of that business has since been shut down and I have permission to host a mirror of the site.",
        link: "https://nashandpine.zepez.dev",
        retrospective: null,
        repository: "https://github.com/zepez/nashandpine.com",
		emoji: "📰"
    },
    {
        name: "wilsonrotary.com",
        description: "Another simple project for a previous employer, this time using Wordpress.",
        link: "https://wilsonrotary.com",
        retrospective: null,
        repository: null,
		emoji: "🌎"
    },
    {
        name: "haulinhatchets.com",
        description: "Utilitarian site for a mobile axe throwing trailer based out of Wilson, North Carolina. Waiver signatures and contact inqueries are propagated to the owner via email and backed up to Airtable. Will eventually spend some time on the design ;).",
        link: "https://haulinhatchets.com",
        retrospective: null,
        repository: "https://github.com/zepez/haulinhatchets.com",
		emoji: "🪓"
    },
]
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hey 👋🏻, I'm Alex</h1>
		<p class="mb-4">
			I make things and have thoughts, so here I am sharing them. 
		</p>
		<SocialList />
	</section>

	<section aria-label="Project list">
        <h2 class="title mb-4 text-xl mt-16">Projects</h2>
		<p class="mb-12">
			The projects listed here are still publicly available. Others have since been retired or transitioned and I am not able to maintain a public mirror.
		</p>

		<ul>
			{projects.map((project) => (
				<li class="mb-12">
					<p class="mb-4 mt-2">
						<span class="text-2xl mr-2">{project.emoji}</span>
						<b>{project.name}</b> - <Fragment set:html={project.description} />
					</p>

					{project.link && (
						<a href={project.link} class="cactus-link" target="_blank">Site</a>
					)}
					{project.repository && (
						<span>
							|
							<a href={project.repository} class="cactus-link" target="_blank">Repo</a>
						</span>
					)}
					{project.retrospective && (
						<span>
							|
							<a href={project.retrospective} class="cactus-link" target="_blank">Retrospective</a>
						</span>
					)}
				</li>
			))}
		</ul>
    </section>
</PageLayout>
